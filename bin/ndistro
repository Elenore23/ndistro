#!/usr/bin/env bash

VERSION="0.0.1"

#
# Exit with the given <msg ...>
#

abort() {
  echo "Error: $@" && exit 1
}

#
# Log the given <msg ...>
#

log() {
  echo "... $@"
}

#
# Install <user> <mod> [version]
#

mod() {
  local user=$1
  local mod=$2
  local version=${3-master}
  local dest="./support/$mod"
  local url="http://github.com/$user/$mod/tarball/$version"
  if [[ $version = "master" ]]; then
    log "installing $user/$mod"
  else
    log "installing $user/$mod $version"
  fi
  mkdir -p $dest
  cd $dest \
    && curl -# -L $url \
    | tar -xz --strip 1 \
    && cd ../..
}

if [[ -f ./.ndistro ]]; then
  . ./.ndistro
else
  abort ".ndistro not found in this directory"
fi

